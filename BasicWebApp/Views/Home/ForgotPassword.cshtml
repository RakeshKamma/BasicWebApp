<form asp-action="ForgotPassword" method="post">
    <div>
        <label>Username:</label>
        <input type="text" name="Username" required />
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <p>@ViewBag.Message</p>
        }
    </div>
</form>
